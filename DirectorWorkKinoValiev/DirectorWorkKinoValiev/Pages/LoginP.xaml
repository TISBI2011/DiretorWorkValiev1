<Page x:Class="DirectorWorkKinoValiev.Pages.LoginP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DirectorWorkKinoValiev.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginP">

    <Grid>
        <StackPanel>
            <Label Content="Авторизация" FontSize="25" />
            <Label Content="Логин"/>
            <TextBox x:Name="TBlogin"/>
            <Label Content="Пароль"/>
            <TextBox x:Name="TBpass"/>
            <Button x:Name="Bsubmit" Click="Bsubmit_Click" Content="Авторизация"  Height="21"/>
            <Label Content="Нет учетной записи?"/>
            <Button x:Name="Bregister" Click="Bregister_Click" Content="Регистрация" />
        </StackPanel>
    </Grid>
</Page>
